




<br/>
<div class="container">
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">
          <%= form_for @usuario, :html => { :class => "form-horizontal usuario" } do |f| %>

          <fieldset>
            <legend class="text-center">Datos Usuario</legend>


  <% if @usuario.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title">Por Favor Verificar:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @usuario.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
            
    
            <!-- Email input-->
            <div class="form-group">
              <%= f.label :email, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.text_field :email, :class => 'form-control' %>
              </div>
            </div>
    
            <!-- Email input-->
            <div class="form-group">
              <%= f.label :contraseña, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.password_field :password, :class => 'form-control' %>
              </div>
            </div>
    
            <!-- Message body -->
            <div class="form-group">
              <%= f.label :confirmación_contraseña, :class => 'control-label col-lg-2' %>
              <div class="col-lg-10">
                <%= f.password_field :password_confirmation, :class => 'form-control' %>
              </div>
            </div>

            <!-- Form actions -->
            <div class="form-group">
              <div class="col-md-12 text-right">
                <%= f.submit 'Guardar', :class => 'btn btn-primary' %>
                <%= link_to 'Atras', root_path, :class => "btn btn-default" %>
              </div>
            </div>
          </fieldset>
          <% end %>
        </div>
      </div>
  </div>
</div>